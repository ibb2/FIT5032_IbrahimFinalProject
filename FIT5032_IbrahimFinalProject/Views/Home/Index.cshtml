@{
    ViewData["Title"] = "uMRI";
}

<div class="container-fluid text-center">
    <div class="row g-5 row-cols-sm-1 justify-content-sm-center text-center">
        <div class="col-sm-9">
            @* References from https://pngtree.com/freebackground/ct-or-mri-diagnosis-in-clinic-flat-banner-template-hospital-human-brain-body-scan-machine-for-patient-vector-male-doctor-research-man-on-computer-female-nurse-configures-scanner-illustration_1774597.html*@
            <img class="img-fluid" src="https://png.pngtree.com/background/20220725/original/pngtree-ct-or-mri-diagnosis-in-clinic-flat-banner-template-hospital-human-picture-image_1774597.jpg" alt="https://pngtree.com/freebackground/ct-or-mri-diagnosis-in-clinic-flat-banner-template-hospital-human-brain-body-scan-machine-for-patient-vector-male-doctor-research-man-on-computer-female-nurse-configures-scanner-illustration_1774597.html" />
            <div>
                <h1 class="display-4">Welcome to @ViewData["Title"]</h1>
                <p>A better MRI experience for all of us.</p>
            </div>
            <div class="col">
                @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a> *@
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
                    <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                } else
                {
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Go to my Profile</a>
                }
            </div>
        </div>
        <div class="col border-top p-5 text-center">
            <div class="row row-cols-sm-2 text-center">
                <div class="col text-center">
                    <h2>With many positive reviews</h2>
                    <p class="text-wrap">
                        We pride ourself on the positive reviews that out customers leave us. With @(ViewData["AggreateRating"] != null ? ViewData["TotalReviews"] : 0) people having reviewed
                        us. We keep striving to improve the experience for everyone. Because this when you benefit we all benefit.
                    </p>
                </div>
                <div class="text-center"><p>@(ViewData["AgggregateRating"] != null ? @ViewData["AggreateRating"] : 0) / 5</p></div>
            </div>
        </div>
    </div>
</div>


