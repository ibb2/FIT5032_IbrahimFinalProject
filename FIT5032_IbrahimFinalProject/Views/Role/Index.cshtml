@{
    ViewData["Title"] = "Home Page";
}

<h1>List of Roles</h1>
<a asp-action="Create">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a asp-action="Edit" asp-route-roleId="@role.Id">Edit</a></td>
                <td><button type="submit" value="Delete" asp-page-handler="delete" asp-route-roleId="@role.Id" class="btn btn-primary">Delete</button></td>
            </tr>
        }
    </tbody>
</table>